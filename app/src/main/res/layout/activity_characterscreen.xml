<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:ignore="ContentDescription"
    android:layout_height="match_parent"
    tools:context=".characterscreen">



    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/recyclerView"
        android:background="#FFFFFF"
        android:layout_below="@+id/saerchlinear"

        android:layout_marginBottom="55dp"
        android:layout_height="match_parent" >


    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/saerchlinear"
        android:orientation="horizontal"
        android:layout_below="@+id/characterscreen"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/search"

            />


        <EditText
            android:id="@+id/txt_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="#FFFFFF"
            android:textSize="22sp"
            android:layout_margin="5dp"
            android:hint="Search Character ID"
            android:layout_marginStart="10dp" />

    </LinearLayout>








    
    
<LinearLayout
    android:layout_width="match_parent"
    android:id="@+id/characterscreen"
    android:background="#FDFDFD"
    android:gravity="center"
    android:layout_height="wrap_content">




    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:background="@drawable/ci"
        tools:ignore="MissingConstraints"
        android:layout_marginStart="3dp" />

</LinearLayout>









    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-2715877056545900/3110911475">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>